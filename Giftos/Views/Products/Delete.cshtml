@model Giftos.Entities.Product
@{
    ViewData["Title"] = "Delete";
}


<style>
    .breadcrumb-container {
        margin-top: 20px;
    }

    .buttons-container {
        margin-top: 20px;
    }
    /* Center modal vertically and horizontally */
    .modal-dialog {
        display: flex;
        align-items: center;
        min-height: calc(100% - 2rem); /* Adjust as needed */
        justify-content: center;
    }
</style>

<form asp-action="Delete">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h2 class="text-center text-danger">Delete Product</h2>
                <p class="text-center">Are you sure you want to delete this product?</p>
                <div class="card">
                    <div class="card-body text-center">
                        <h4 class="card-title">@Html.DisplayFor(model => model.Name)</h4>
                        @if (Model.Image != null)
                        {
                            <img src="data:image/*;base64,@(Convert.ToBase64String(Model.Image))" style="
                         width: 100px;
                         height: 100px;
                         object-fit: cover;
                         border-radius: 50%;
                         border: 1px solid #ddd;
                         margin-bottom: 15px;
                                " alt="Product Image" />
                        }
                        else
                        {
                            <img src="https://via.placeholder.com/100" style="
                         width: 100px;
                         height: 100px;
                         object-fit: cover;
                         border-radius: 50%;
                         border: 1px solid #ddd;
                         margin-bottom: 15px;
                            " alt="Product Image">
                        }
                        <p class="card-text">@Html.DisplayFor(model => model.Description)</p>
                        <h5 class="card-text text-success">$@Html.DisplayFor(model => model.Price)</h5>
                        <button class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">Delete Product</button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary ml-2">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this product?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" value="Delete" class="btn btn-danger">Delete</button>
                </div>
            </div>
        </div>
    </div>
</form>