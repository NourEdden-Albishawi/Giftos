@model Giftos.Entities.Product

@{
    ViewData["Title"] = "Create";
}




<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="text-center">Create Product</h2>
            <form asp-action="Create" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="productName">Product Name</label>
                    <input type="text" asp-for="Name" class="form-control" placeholder="Enter product name">
                </div>
                <div class="form-group">
                    <label for="productDescription">Product Description</label>
                    <textarea class="form-control" asp-for="Description" rows="3" placeholder="Enter product description"></textarea>
                </div>
                <div class="form-group">
                    <label for="productPrice">Product Price</label>
                    <input type="number" asp-for="Price" class="form-control"placeholder="Enter product price">
                </div>
                <div class="form-group">
                    <label for="productPrice">Product Stock</label>
                    <input type="number" asp-for="Stock" class="form-control" placeholder="Enter product price">
                </div>
                <div class="form-group text-center">
                    <img src="https://via.placeholder.com/150" id="productImagePreview" class="product-image-preview" alt="Product Image">
                    <div class="mt-3">
                        <input type="file" asp-for="Image" class="form-control-file" id="productImage" onchange="previewProductImage(event)">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Create Product</button>
            </form>
        </div>
    </div>
</div>

<script>
    function previewProductImage(event) {
        const reader = new FileReader();
        reader.onload = function () {
            const output = document.getElementById('productImagePreview');
            output.src = reader.result;
        };
        reader.readAsDataURL(event.target.files[0]);
    }
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}